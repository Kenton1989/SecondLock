{
    "manifest_version": 2,

    "name": "TimeLock",
    "version": "0.1",
    "description": "Lock your time with your intension.",
    
    "default_locale": "en",
    
    "permissions": ["activeTab", "declarativeContent", "storage"],

    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },

    "options_page": "options.html",
    
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "512": "images/time-lock-512.png"
      }
    },
    
    "icons": {
      "512": "images/time-lock-512.png"
    }
  }