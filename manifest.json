{
  "manifest_version": 2,

  "name": "TimeLock",
  "version": "0.0.1",
  "description": "Lock your time with your intension.",

  "default_locale": "en",

  "permissions": ["tabs", "storage", "unlimitedStorage"],

  "optional_permissions": ["notifications"],

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "options_page": "options.html",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "256": "images/timelock-256.png"
    }
  },

  "icons": {
    "256": "images/timelock-256.png"
  }
}
