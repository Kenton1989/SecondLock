{
  "manifest_version": 2,

  "name": "SecondLock",
  "version": "0.2.1",
  "description": "Lock Every Second for Mindful Usage.",

  "default_locale": "en",

  "permissions": ["tabs", "storage", "unlimitedStorage"],

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "options_page": "options.html",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "256": "images/logo-256.png"
    }
  },

  "icons": {
    "256": "images/logo-256.png"
  }
}
