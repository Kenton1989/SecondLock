{
  "manifest_version": 2,

  "name": "SecondLock - lock every second for mindful usage",
  "short_name": "SecondLock",

  "version": "0.4.0",
  "description": "Lock Every Second for Mindful Usage.",

  "default_locale": "en",

  "permissions": ["tabs", "storage", "unlimitedStorage"],

  "background": {
    "scripts": ["background.bundle.js"]
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "256": "images/logo-256.png"
    }
  },

  "icons": {
    "256": "images/logo-256.png"
  }
}
